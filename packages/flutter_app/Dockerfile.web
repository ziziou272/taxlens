FROM ghcr.io/cirruslabs/flutter:latest AS build
WORKDIR /app
COPY packages/flutter_app /app
RUN flutter pub get && flutter build web --release --base-href "/taxlens/"

FROM nginx:alpine
COPY --from=build /app/build/web /usr/share/nginx/html/taxlens
COPY packages/flutter_app/nginx.conf /etc/nginx/conf.d/taxlens.conf
EXPOSE 80
